    <div class="kpi-card" id="userCountCard">
        @ViewBag.TotalUsers
        <div class="kpi-label">Registered Users</div>
    </div>
</div>

<script>
    async function refreshUserCount() {
        try {
            const response = await fetch('/User/GetUserCount');
            const count = await response.json();
            if (count >= 0) {
                document.getElementById('userCountCard').firstChild.textContent = count;
            }
        } catch (err) {
            console.error('Error fetching user count', err);
        }
    }

    setInterval(refreshUserCount, 10000); // refresh every 10 seconds
</script>
