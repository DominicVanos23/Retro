@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    :root {
        --bg-1: #0E1327;
        --bg-2: #151A2C;
        --brand: #BAAA49;
        --text: #FFFFFF;
        --text-dim: #D7D9E1;
        --border: #ffffff22; /* 13% white */
        --shadow: 0 14px 38px rgba(0,0,0,.45);
        --radius: 18px;
        --ring: 0 0 0 3px rgba(186,170,73,.35);
    }

    html, body {
        height: 100%;
        margin: 0;
        color: var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial;
        background: radial-gradient(1200px 600px at 10% -10%, #20306655 0%, transparent 60%), radial-gradient(900px 500px at 110% 10%, #3a2f0b33 0%, transparent 55%), linear-gradient(180deg, var(--bg-1), var(--bg-2));
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

        /* Subtle grid overlay */
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background-image: linear-gradient(to right, #ffffff08 1px, transparent 1px), linear-gradient(to bottom, #ffffff08 1px, transparent 1px);
            background-size: 40px 40px;
            mask-image: radial-gradient(circle at 50% 30%, black 30%, transparent 70%);
            pointer-events: none;
        }

    .page-container {
        min-height: calc(100vh - 0px);
        display: grid;
        place-items: center;
        padding: 48px 16px;
    }

    /* Glass auth card */
    .auth-card {
        width: min(420px, 92vw);
        padding: 32px 28px;
        border-radius: var(--radius);
        background: linear-gradient(180deg, #ffffff26, #ffffff12);
        -webkit-backdrop-filter: blur(16px) saturate(140%);
        backdrop-filter: blur(16px) saturate(140%);
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
    }

    .brand-wrap {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-bottom: 14px;
        text-align: center;
    }

    .brand-logo {
        width: 88px;
        height: auto;
        filter: drop-shadow(0 4px 16px rgba(0,0,0,.45));
    }

    .brand-title {
        font-size: 22px;
        font-weight: 800;
        color: var(--brand);
        letter-spacing: .3px;
        margin: 0;
    }

    .auth-card h2 {
        margin: 6px 0 12px;
        font-size: 28px;
        line-height: 1.2;
        color: var(--brand);
        text-align: center;
        text-shadow: 0 1px 0 rgba(0,0,0,.25);
    }

    .auth-sub {
        text-align: center;
        color: var(--text-dim);
        margin: 0 0 18px;
        font-size: 14px;
    }

    /* Inputs */
    .form-group {
        display: grid;
        gap: 10px;
        margin: 10px 0 14px;
    }

    .input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: linear-gradient(180deg, #0b0f2233, #0b0f221a);
        color: var(--text);
        font-size: 15px;
        outline: none;
        transition: box-shadow .2s ease, border-color .2s ease, background .2s ease;
    }

        .input::placeholder {
            color: #cfd3e6cc;
        }

        .input:focus {
            border-color: var(--brand);
            box-shadow: var(--ring);
            background: linear-gradient(180deg, #0b0f224d, #0b0f2226);
        }

    /* Row for remember/forgot */
    .row-flex {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin: 4px 0 12px;
    }

    .checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        color: var(--text-dim);
        user-select: none;
    }

        .checkbox input {
            width: 16px;
            height: 16px;
            accent-color: var(--brand);
        }

    .link {
        color: var(--brand);
        text-decoration: none;
        font-size: 14px;
    }

        .link:hover {
            text-decoration: underline;
        }

    /* Button */
    .btn-primary {
        width: 100%;
        border: none;
        border-radius: 14px;
        padding: 12px 16px;
        font-weight: 800;
        letter-spacing: .2px;
        background: linear-gradient(180deg, #e4d46d, #BAAA49);
        color: #121629;
        cursor: pointer;
        transition: transform .15s ease, box-shadow .2s ease, filter .2s ease;
        box-shadow: 0 8px 20px rgba(186,170,73,.35);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 30px rgba(186,170,73,.45);
            filter: brightness(1.02);
        }

        .btn-primary:active {
            transform: translateY(0);
            box-shadow: 0 6px 14px rgba(186,170,73,.35);
        }

    .divider {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 16px 0 8px;
        color: #cfd3e699;
        font-size: 13px;
    }

        .divider::before, .divider::after {
            content: "";
            height: 1px;
            flex: 1;
            background: linear-gradient(90deg, transparent, #ffffff33, transparent);
        }

    .alt-links {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 8px;
        flex-wrap: wrap;
    }

    footer {
        width: 100%;
        padding: 18px;
        background: linear-gradient(180deg, #0b1022, #0a0f20);
        color: var(--brand);
        text-align: center;
        border-top: 1px solid #ffffff1a;
        margin-top: 40px;
    }

    @@media (prefers-reduced-motion: reduce) {
        *

    {
        transition: none !important;
    }

    }
</style>

<div class="page-container">
    <section class="auth-card" aria-labelledby="login-title">
        <div class="brand-wrap">
            <img src="~/img/Mlogo.png" alt="Majoko Rentals logo" class="brand-logo" />
            <p class="brand-title">Majoko Rentals</p>
        </div>

        <h2 id="login-title">Login</h2>
        <p class="auth-sub">Welcome back! Please sign in to continue.</p>

        <form asp-controller="Account" asp-action="Login" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email" class="visually-hidden">Email</label>
                <input id="email" class="input" type="email" name="Email" placeholder="Email" required autocomplete="email" />
            </div>

            <div class="form-group">
                <label for="password" class="visually-hidden">Password</label>
                <input id="password" class="input" type="password" name="Password" placeholder="Password" required autocomplete="current-password" />
            </div>

            <div class="row-flex">
                <label class="checkbox">
                    <input type="checkbox" name="RememberMe" />
                    <span>Remember me</span>
                </label>
                <a href="/Account/ForgotPassword" class="link">Forgot password?</a>
            </div>

            <button type="submit" class="btn-primary">Sign in</button>

            <div class="divider">or</div>

            <div class="alt-links">
                <a href="/Account/Register" class="link">Create account</a>
            </div>
        </form>
    </section>
</div>